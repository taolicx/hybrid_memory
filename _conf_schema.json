{
  "order": 1,
  "title": "混合记忆设置",
  "schema": [
    {
      "name": "embedding_provider",
      "label": "Embedding Provider",
      "type": "str",
      "default": "",
      "description": "用于向量化的Embedding Provider（可选）"
    },
    {
      "name": "llm_provider",
      "label": "LLM Provider",
      "type": "str",
      "default": "",
      "description": "用于总结的LLM Provider（可选）"
    },
    {
      "name": "decay_enabled",
      "label": "启用记忆衰减",
      "type": "bool",
      "default": true,
      "description": "长期记忆是否自动衰减"
    },
    {
      "name": "decay_days",
      "label": "记忆衰减天数",
      "type": "int",
      "default": 30,
      "description": "记忆多少天后开始衰减"
    },
    {
      "name": "retrieval_top_k",
      "label": "检索返回数量",
      "type": "int",
      "default": 5,
      "description": "每次检索返回的记忆数量"
    },
    {
      "name": "summary_threshold",
      "label": "总结阈值",
      "type": "int",
      "default": 20,
      "description": "多少条消息后自动总结"
    },
    {
      "name": "max_messages",
      "label": "最大消息数",
      "type": "int",
      "default": 50,
      "description": "每个会话保留的最大消息数"
    },
    {
      "name": "webui_enabled",
      "label": "启用WebUI",
      "type": "bool",
      "default": true,
      "description": "是否启用WebUI管理界面"
    },
    {
      "name": "webui_host",
      "label": "WebUI监听地址",
      "type": "str",
      "default": "0.0.0.0",
      "description": "WebUI监听地址"
    },
    {
      "name": "webui_port",
      "label": "WebUI端口",
      "type": "int",
      "default": 9241,
      "description": "WebUI监听端口"
    },
    {
      "name": "webui_username",
      "label": "WebUI用户名",
      "type": "str",
      "default": "admin",
      "description": "WebUI登录用户名"
    },
    {
      "name": "webui_password",
      "label": "WebUI密码",
      "type": "str",
      "default": "admin",
      "description": "WebUI登录密码"
    }
  ]
}
